<UserControl
    x:Class="WindowsWallpaper.UWP.Components.ImageItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Canvas x:Name="canvas1">
            <Image Stretch="UniformToFill" Source="{Binding Source}" 
                   Height="{Binding ActualHeight, ElementName=canvas1, Mode=OneWay}" 
                   Width="{Binding ActualWidth, ElementName=canvas1, Mode=OneWay}"/>
            <TextBlock  Canvas.ZIndex="1" Text="{Binding Description}"/>
        </Canvas>
    </Grid>

</UserControl>