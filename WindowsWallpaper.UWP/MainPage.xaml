<Page
    x:Class="WindowsWallpaper.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    xmlns:cpn = "using:WindowsWallpaper.UWP.Components"
    mc:Ignorable="d">

    <Pivot>
        <PivotItem Header="Photos" Margin="0">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <FlipView ItemsSource="{Binding Images}" x:Name="imageSlider">
                    <FlipView.ItemTemplate>
                        <DataTemplate>
                            <cpn:ImageItem Height="{Binding ElementName=imgSlider, Path=Height}" DataContext="{Binding}" ImageSourceStr="{Binding Path=str}" ImageSource="{Binding}"></cpn:ImageItem>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>
            </Grid>
        </PivotItem>
        <PivotItem Header="Settings" Margin="0">
            <cpn:SettingTab></cpn:SettingTab>
        </PivotItem>
    </Pivot>
</Page>